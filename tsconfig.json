{
  "include": ["client/src"],
  "exclude": ["node_modules", "dist", "client/dist"],
  "compilerOptions": {
    "noEmit": true,
    "strict": true,

    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",

    "lib": ["DOM", "DOM.Iterable", "ESNext"],

    "jsx": "react-jsx",

    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["client/src/*"]
    },

    "types": ["vite/client"]
  }
}
